<GridPane hgap="10" prefHeight="525.0" prefWidth="559.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.pvt.avto.controller.IntroGridController">
	
	<padding>
		<Insets bottom="25" left="25" right="25" top="25" />
	</padding>
	<children>
		
		<Label id="lblTitle" text="Создай свой авто сам!" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" />
		<Label text="Введи марку автомобиля:" GridPane.rowIndex="2" />
		
		<TextField fx:id="txtName" maxWidth="150" prefHeight="25.0" prefWidth="104.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
 
 		
		<Button onAction="#showBrand" text="Показать марку автомобиля" userData="OK" GridPane.rowIndex="8" />
		<Button onAction="#addDisk" text="Добавить колесо" userData="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="3" />			
		<Label fx:id="lblMessage" prefHeight="17.0" prefWidth="311.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />
      <ImageView fitHeight="200.0" fitWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <image>
            <Image url="@logo.png" />
         </image>
      </ImageView>
      <Button mnemonicParsing="false" onAction="#addMotor" text="Добавить мотор" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button mnemonicParsing="false" onAction="#drive" text="Поехали!" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <Button mnemonicParsing="false" onAction="#load" text="Заправить" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <Button mnemonicParsing="false" onAction="#change" text="Поменять колесо" GridPane.rowIndex="9" />
      <Label fx:id="lblDisks" prefHeight="17.0" prefWidth="202.0" GridPane.rowIndex="3" />
      <Label fx:id="lblMotor" prefHeight="17.0" prefWidth="238.0" GridPane.rowIndex="4" />
      <Label fx:id="lblLoad" prefHeight="17.0" prefWidth="249.0" GridPane.rowIndex="5" />

	</children>
   <columnConstraints>
      <ColumnConstraints maxWidth="311.0" minWidth="111.0" prefWidth="311.0" />
